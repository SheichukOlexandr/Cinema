@model List<BusinessLogic.DTOs.MovieDTO>

@{
    ViewData["Title"] = "Популярні фільми";
}

<h2>Популярні фільми</h2>

<div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-md-3">
            <div class="card">
                <img src="@movie.PosterURL" class="card-img-top" alt="@movie.Title">
                <div class="card-body">
                    <h5 class="card-title">@movie.Title</h5>
                    <p class="card-text">Рейтинг: @movie.Rating</p>
                    <a href="@Url.Action("Details", "Movies", new { id = movie.Id })" class="btn btn-primary">Детальніше</a>
                </div>
            </div>
        </div>
    }
</div>

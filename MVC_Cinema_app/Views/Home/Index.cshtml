@model HomeViewModel
@{
    ViewData["Title"] = "Головна";
}

<div class="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <a href="Злодій, який викрадає корпоративні таємниці за допомогою технології обміну снами.">
                <img src="https://image.tmdb.org/t/p/w600_and_h900_bestv2/r84x4x93LbZ2gozISTBYVeq0gLZ.jpg" alt="Початок">
            </a>
        </div>
        <div class="carousel-item">
            <a href="Подорож крізь простір і час для порятунку людства.">
                <img src="https://image.tmdb.org/t/p/w600_and_h900_bestv2/9d1sCoMSGJZtghS2X9us1h9u8lW.jpg" alt="Інтерстеллар">
            </a>
        </div>
        <div class="carousel-item">
            <a href="Команда вуличних гонщиків стикається з новими викликами.">
                <img src="https://image.tmdb.org/t/p/w600_and_h900_bestv2/rLxfXS0Dpd4ixD7HOYagWTx83SS.jpg" alt="Форсаж 7">
            </a>
        </div>
        <div class="carousel-item">
            <a href="Фінальна битва Месників проти Таноса.">
                <img src="https://image.tmdb.org/t/p/w600_and_h900_bestv2/6gWhqrYEOBqqzXPKP7c0m4bIvTX.jpg" alt="Месники: Фінал">
            </a>
        </div>
    </div>
    <button class="prev">&#10094;</button>
    <button class="next">&#10095;</button>
</div>


        <!-- Фільтрація фільмів -->
        <section class="movies">
            <div class="filter-bar">
                <div class="filter-dropdowns">
                    <select asp-for="SelectedGenreId" asp-items="Model.GenreOptions" class="genre" id="genreDropdown">
                        <option value="all genres">Всі жанри</option>
                    </select>

                    <select name="year" class="year">
                        <option value="all years">Всі роки</option>
                        <option value="2025">2025</option>
                        <option value="2020-2024">2020-2024</option>
                        <option value="2010-2019">2010-2019</option>
                        <option value="2000-2009">2000-2009</option>
                        <option value="1980-1999">1980-1999</option>
                    </select>
                </div>

                <div class="filter-radios">
                    <input type="radio" name="grade" id="featured" checked>
                    <label for="featured">Рекомендовані</label>

                    <input type="radio" name="grade" id="popular">
                    <label for="popular">Популярні</label>

                    <input type="radio" name="grade" id="newest">
                    <label for="newest">Нові</label>

                    <div class="checked-radio-bg"></div>
                </div>
            </div>

            <div class="movies-grid" id="moviesGrid">
                @foreach (var movieViewModel in Model.Movies)
                {
                    <a asp-action="Details" asp-route-id="@movieViewModel.Movie.Id" class="movie-card visible" data-genre="@movieViewModel.Movie.GenreName">
                        <div class="card-head">
                            <img src="@movieViewModel.Movie.PosterURL" alt="@movieViewModel.Movie.Title" class="card-img">
                            <div class="card-overlay">
                                <div class="bookmark">
                                    <ion-icon name="bookmark"></ion-icon>
                                </div>
                                <div class="rating">
                                    <ion-icon name="star-outline"></ion-icon>
                                    <span>@movieViewModel.Movie.Rating</span>
                                </div>
                                <div class="play">
                                    <ion-icon name="play-circle-outline"></ion-icon>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <h3 class="card-title">@movieViewModel.Movie.Title</h3>
                            <div class="card-info">
                                <span class="genre">@movieViewModel.Movie.GenreName</span>
                            </div>
                            <div class="card-info">
                                <span class="year">@movieViewModel.Movie.ReleaseDate.Year</span>
                            </div>
                        </div>
                    </a>
                }
            </div>
            <button class="load-more">Завантажити ще</button>
        </section>

        <!-- Категорії фільмів -->
        <section class="category" id="category">
            <h2 class="section-heading">Категорії</h2>

            <div class="category-grid">
                <div class="category-card">
                    <img src="https://i.postimg.cc/JzfWFmfC/action.jpg" alt="image" class="card-img">
                    <div class="name">Бойовик</div>
                    <div class="total">2</div>
                </div>
                <div class="category-card">
                    <img src="https://i.postimg.cc/CKpxqjL8/comedy.jpg" alt="image" class="card-img">
                    <div class="name">Комедія</div>
                    <div class="total">2</div>
                </div>
                <div class="category-card">
                    <img src="https://i.postimg.cc/3rfrBMxY/thriller.webp" alt="image" class="card-img">
                    <div class="name">Триллер</div>
                    <div class="total">0</div>
                </div>
            </div>
        </section>
    </main>
</div>

<!-- Підключення іконок та скриптів -->
<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
<script src="~/js/site.js"></script>
<script src="~/js/movies.js"></script>
